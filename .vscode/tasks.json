{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "g++ build proyect",
        "command": "gcc",
        "args": [
          "-I${workspaceFolder}/libs/",
          "${workspaceFolder}/libs/*/src/*.c",
          "${file}",
          "-o",
          "${workspaceFolder}/bin/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "bin"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "type": "shell",
        "label": "g++ debug proyect",
        "command": "gcc",
        "args": [
          "-I${workspaceFolder}${pathSeparator}libs${pathSeparator}",
          "-g",
          "${workspaceFolder}${pathSeparator}libs${pathSeparator}io${pathSeparator}src${pathSeparator}*.c",
          "${workspaceFolder}${pathSeparator}libs${pathSeparator}llist${pathSeparator}src${pathSeparator}*.c",
          "${workspaceFolder}${pathSeparator}libs${pathSeparator}project${pathSeparator}src${pathSeparator}*.c",
          "${workspaceFolder}${pathSeparator}libs${pathSeparator}queue${pathSeparator}src${pathSeparator}*.c",
          "${workspaceFolder}${pathSeparator}libs${pathSeparator}sqs${pathSeparator}src${pathSeparator}*.c",
          "${workspaceFolder}${pathSeparator}libs${pathSeparator}stack${pathSeparator}src${pathSeparator}*.c",
          "${workspaceFolder}${pathSeparator}libs${pathSeparator}string${pathSeparator}src${pathSeparator}*.c",
          "${file}",
          "-o",
          "${workspaceFolder}${pathSeparator}bin${pathSeparator}${fileBasenameNoExtension}.exe"
        ],
        "options": {
          "cwd": "bin"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": false
        }
      }
    ]
  }