{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build proyect",
            "command": "gcc",
            "args": [
                "-I${workspaceFolder}${pathSeparator}libs${pathSeparator}",
                "${workspaceFolder}${pathSeparator}libs${pathSeparator}io${pathSeparator}src${pathSeparator}io.c",
                "${workspaceFolder}${pathSeparator}libs${pathSeparator}llist${pathSeparator}src${pathSeparator}llist.c",
                "${workspaceFolder}${pathSeparator}libs${pathSeparator}project${pathSeparator}src${pathSeparator}zona.c",
                "${workspaceFolder}${pathSeparator}libs${pathSeparator}queue${pathSeparator}src${pathSeparator}queue.c",
                "${workspaceFolder}${pathSeparator}libs${pathSeparator}string${pathSeparator}src${pathSeparator}string.c",
                "${file}",
                "-o",
                "${workspaceFolder}${pathSeparator}bin${pathSeparator}${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "g++ debug proyect",
            "command": "gcc",
            "args": [
                "-g",
                "-I${workspaceFolder}${pathSeparator}libs${pathSeparator}",
